; ---------------------------------------------------------
; 1-bit PDM 出力用 PIO プログラム
; - out でデータを PIN_AUDIO_OUT に出しつつ、
;   side_set を CLK として 2.8MHz でトグルし続ける
; ---------------------------------------------------------
.program wsd_player

;--- 32 bit を MSB→LSB でそのまま出力 -----------------
loop:
    out pins, 4              ; 1 ; 
    jmp loop                 ; 2 ; 
